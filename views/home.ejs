<!DOCTYPE html>
<% include partials/head-home %>
  <body >

    <% include partials/header-home %>

           <noscript>
    <style type='text/css'>
        #dropHere {display:none;}
    </style>
    <div class='noscriptmsg'>
      <%= noJs %>
    </div>
    </noscript>
       <main>
           <canvas id=c>
        </canvas>
        <div id=cont>
          <div id='dropHere'>
            <div><%= dropHere %></div>
            <input type='file' onchange="colorAnalysis()" id=imgsel>
          </div>

          <form action='/screenshot' method='GET'>
            <label for='scrSht'><%= colorFromWebsite %></label>
            <input type='text' name='scrSht' id='scrSht' placeholder='any http:// website' />
            <button>Kolorise!</button>
          </form>
        </div>
      </main>

      <canvas id='myCanvas' style='display:none;'>
        <%= noSupportForCanvas %>
      </canvas>

      <div id='screenshotResult'>
        <% if(typeof screenshotImg != 'undefined') { %>
          <img src='/screenshots/<%= screenshotImg %>' width=800 /> aaa
          <% } %>
      </div>


      <% include partials/footer %>
